<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/fragment_horizontal_margin"
        android:layout_marginVertical="@dimen/fragment_vertical_margin"
        android:id="@+id/journal_entry_ConstraintLayout"
        tools:context=".journal.fragments.JournalEntryFragment">

    <EditText
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/journal_entry_title_EditText"
            android:autofillHints="Journal Entry Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/journal_entry_body_EditText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:hint="Enter journal entry title"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/journal_entry_body_EditText"
            android:autofillHints="Journal Entry Body"
            app:layout_constraintTop_toBottomOf="@+id/journal_entry_title_EditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"

            android:hint="Enter journal entry"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/journal_entry_save_Button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/journal_entry_body_EditText"
            app:layout_constraintEnd_toStartOf="@+id/journal_entry_cancel_Button"
            app:layout_constraintVertical_bias="0.508" app:layout_constraintHorizontal_chainStyle="spread"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/journal_entry_cancel_Button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/journal_entry_body_EditText"
            app:layout_constraintStart_toEndOf="@id/journal_entry_save_Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>