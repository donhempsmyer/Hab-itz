<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/fragment_horizontal_margin"
        android:layout_marginVertical="@dimen/fragment_vertical_margin"
        android:id="@+id/journal_entry_ConstraintLayout"
        tools:context=".journal.fragments.JournalEntryFragment">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/entry_title_text"
            android:autofillHints="Journal Entry Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/entry_body_text"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/journal_entry_title_hint" android:textColor="@color/black"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox" android:textSize="20sp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/journal_entry_header_TextView"
            android:elevation="5dp" android:text=""
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/entry_body_text"
            android:autofillHints="Journal Entry Body"
            app:layout_constraintTop_toBottomOf="@+id/entry_title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="@string/journal_entry_body_hint" android:textColor="@color/black"
            android:textSize="20sp"
            style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
            android:text=""
    />
    <Button
            android:text="@string/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_save_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entry_body_text"
            app:layout_constraintEnd_toStartOf="@+id/entry_cancel_btn"
            app:layout_constraintVertical_bias="0.107" app:layout_constraintHorizontal_chainStyle="spread"
            android:textColor="@color/habits_green"
    />
    <Button
            android:text="@string/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_cancel_btn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/entry_body_text"
            app:layout_constraintStart_toEndOf="@id/entry_save_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.107"
            android:textColor="@color/habits_green"
    />
    <TextView
            android:text="@string/journal_entry_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/journal_entry_header_TextView"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/entry_title_text"
            android:textColor="@color/habits_blue" android:textSize="24sp"
            app:layout_constraintVertical_chainStyle="packed"
    />

</androidx.constraintlayout.widget.ConstraintLayout>