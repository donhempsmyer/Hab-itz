<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/journal_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#F0FFFF"
        android:clickable="true"
        android:focusable="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/journal_item_image"
                android:contentDescription="@string/journal_item_book_icon"
                android:src="@drawable/book_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/journal_item_title"
                android:text="@string/journal_item_title"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/journal_item_date"
                android:text="@string/journal_item_date"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="?attr/textAppearanceListItem"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>